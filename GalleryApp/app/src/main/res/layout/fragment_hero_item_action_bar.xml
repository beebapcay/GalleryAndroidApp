<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeroItemActionBarBackground"
    android:paddingTop="@dimen/_2sdp"
    android:paddingBottom="@dimen/_2sdp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:background="@drawable/bg_ripple_circle_hero_item"
        android:backgroundTint="@color/colorHeroItemActionBarBackground"
        android:padding="@dimen/_10sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/colorHeroItemActionBarIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btn_crop"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_5ssp"
        android:background="@drawable/bg_ripple_circle_hero_item"
        android:backgroundTint="@color/colorHeroItemActionBarBackground"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_crop"
        android:tint="@color/colorHeroItemActionBarIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_eye"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btn_eye"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_5ssp"
        android:background="@drawable/bg_ripple_circle_hero_item"
        android:backgroundTint="@color/colorHeroItemActionBarBackground"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_eye"
        android:tint="@color/colorHeroItemActionBarIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_more"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:background="@drawable/bg_ripple_circle_hero_item"
        android:backgroundTint="@color/colorHeroItemActionBarBackground"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_more"
        android:tint="@color/colorHeroItemActionBarIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>
