<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHeroItemOptionBarBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_30sdp"
    android:paddingTop="@dimen/_2sdp"
    android:paddingEnd="@dimen/_30sdp"
    android:paddingBottom="@dimen/_2sdp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_favourite"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_ripple_circle_hero_item"
            android:backgroundTint="@color/colorHeroItemOptionBarBackground"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_heart_outlined"
            android:tint="@color/colorHeroItemOptionBarIcon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_ripple_circle_hero_item"
            android:backgroundTint="@color/colorHeroItemOptionBarBackground"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_edit"
            android:tint="@color/colorHeroItemOptionBarIcon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_ripple_circle_hero_item"
            android:backgroundTint="@color/colorHeroItemOptionBarBackground"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_share"
            android:tint="@color/colorHeroItemOptionBarIcon"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/bg_ripple_circle_hero_item"
            android:backgroundTint="@color/colorHeroItemOptionBarBackground"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorHeroItemOptionBarIcon"
            tools:ignore="ContentDescription" />
    </LinearLayout>


</LinearLayout>
