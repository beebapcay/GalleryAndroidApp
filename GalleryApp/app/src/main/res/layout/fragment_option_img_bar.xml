<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/button_back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:contentDescription="@string/msg_image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_camera" />

    <ImageButton
        android:id="@+id/button_3dots"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:contentDescription="@string/msg_image_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_setting" />

    <ImageButton
        android:id="@+id/button_i"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:contentDescription="@string/msg_image_description"
        app:layout_constraintEnd_toStartOf="@+id/button_3dots"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_recycle_bin" />

    <ImageButton
        android:id="@+id/button_location"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:contentDescription="@string/msg_image_description"
        app:layout_constraintEnd_toStartOf="@+id/button_i"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_location" />

    <ImageButton
        android:id="@+id/button_rotate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:contentDescription="@string/msg_image_description"
        app:layout_constraintEnd_toStartOf="@+id/button_location"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter" />


</androidx.constraintlayout.widget.ConstraintLayout>