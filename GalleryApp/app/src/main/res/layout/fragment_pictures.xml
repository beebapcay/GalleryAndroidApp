<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBackground"
    tools:context=".views.fragments.PicturesFragment">

    <com.emilsjolander.components.StickyScrollViewItems.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_title_dest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/title_dest_pictures"
                    android:textColor="@color/colorTitleDestination"
                    android:textSize="@dimen/_25ssp" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/view_quick_option_button"
                    android:name="com.beebapcay.galleryapp.views.fragments.QuickOptionButtonFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    tools:layout="@layout/fragment_quick_option_button" />
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/view_sticky_action_bar"
                android:name="com.beebapcay.galleryapp.views.fragments.StickyActionBarFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:tag="sticky"
                app:layout_constraintTop_toBottomOf="@id/view_header"
                tools:layout="@layout/fragment_sticky_action_bar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_recycler_gallery_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:clipToPadding="false"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"

                app:layout_constraintTop_toBottomOf="@id/view_sticky_action_bar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.emilsjolander.components.StickyScrollViewItems.StickyScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>