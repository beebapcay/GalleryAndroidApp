<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="match_parent"
        app:riv_border_width="@dimen/_1sdp"
        app:riv_border_color="@color/colorAlbumItemBorder"
        android:layout_height="@dimen/_160sdp"
        android:background="@drawable/bg_rectangle"
        android:backgroundTint="@color/colorPlaceholderBackground"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_15sdp" />

    <TextView
        android:id="@+id/text_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintTop_toBottomOf="@id/image_thumbnail"
        android:layout_marginTop="@dimen/_12sdp"/>

    <TextView
        android:id="@+id/text_album_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/colorTextTertiary"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@id/text_album_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>