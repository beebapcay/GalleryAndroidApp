<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    Base application theme    -->
    <style name="Theme.GalleryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--    Primary brand color    -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!--    Secondary brand color    -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!--    Status bar color    -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!--    Customize your theme here    -->
        <!--    Popup Menu    -->
        <item name="popupMenuStyle">@style/Theme.Gallery.PopupMenu</item>

        <!--    Component    -->
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>



    </style>

    <!--    Popup Menu Custom    -->
    <style name="Theme.Gallery.PopupMenu" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:popupElevation">@dimen/_5sdp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Theme.Gallery.Dialog" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>